<h4>Basket</h4>
<div id="card">
  {{#if notebooks.length}}
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price(1sht)</th>
          <th>Quantity</th>
          <th>Increment</th>
          <th>Decrement</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each notebooks}}
          <tr>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td>{{count}}</td>
            <td>
              <button class="btn btn-small js-inc" data-id="{{id}}">
                Increment
              </button>
            </td>
            <td>
              <button class="btn btn-small js-dec" data-id="{{id}}">
                Decrement
              </button>
            </td>
            <td>
              <button class="btn btn-small js-remove" data-id="{{id}}">
                Delete
              </button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <h5><b>Total Cost: </b><span class="price">{{price}}</span></h5>
  {{else}}
    <div class="container-fluid mt-100">
      <div class="row">
        <div class="col-md-12">
          <div class="card basket">
            <div class="card-body cart">
              <div class="col-sm-12 empty-cart-cls text-center">
                <img
                  src="https://i.imgur.com/dCdflKN.png"
                  width="130"
                  height="130"
                  class="img-fluid mb-4 mr-3"
                />
                <h3><strong>Your Cart is Empty</strong></h3>
                <h4>Add something to make me happy :)</h4>
                <a
                  href="/notebooks"
                  class="btn btn-primary cart-btn-transform m-3"
                  data-abc="true"
                >continue shopping</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
</div>