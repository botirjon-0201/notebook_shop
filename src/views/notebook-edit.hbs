<h4>Edit Notebook {{notebook.title}} </h4>

<form action="/notebooks/edit" method="POST" class="z-depth-4 f_control">
  <div class="input-field">
    <input
      id="title"
      name="title"
      type="text"
      class="validate"
      value="{{notebook.title}}"
      required
    />
    <label for="title">Notebooks Model</label>
    <span class="helper-text" data-error="Enter Noteboooks Name"></span>
  </div>
  <div class="input-field">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      min="1"
      value="{{notebook.price}}"
      required
    />
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter Price"></span>
  </div>
  <div class="input-field">
    <input
      id="img"
      name="img"
      type="text"
      class="validate"
      value="{{notebook.img}}"
      required
    />
    <label for="img">URL Image</label>
    <span class="helper-text" data-error="Enter URL Img"></span>
  </div>
  <div class="input-field">
    <input
      id="descr"
      name="descr"
      type="text"
      class="validate"
      value="{{notebook.descr}}"
      required
    />
    <label for="descr">Description</label>
    <span class="helper-text" data-error="Enter Description"></span>
  </div>
  <input type="hidden" name="id" value="{{notebook.id}}" />
  <button class="btn btn-primary">Edit Notebook</button>
</form>
<form action="/notebooks/remove" method="POST">
  <input type="hidden" name="id" value="{{notebook.id}}" />
  <button class="btn red">Remove Notebook</button>
</form>